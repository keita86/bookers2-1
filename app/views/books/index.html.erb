<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@book.errors.count, "error") %>
    prohibited this obj from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<label for="book_title">Title</label>
<%= f.text_field :title %>

<label for="book_body">Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= @book.user.name %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>