<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="mb-4">
        <h2>User info</h2>
        <image class="prf"><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100,  fallback: "no_image.jpg" %></image>
        <table class="table">
          <tbody>
            <tr class="my-2">
              <td>name</td>
              <td><%= current_user.name %></td>
            </tr>
            <tr class="my-2">
              <td>introduction</td>
              <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(current_user.id) do %>
        <button type="button" class="btn btn-success w-100">
        <i class="fas fa-user-cog"></i>
        </button>
        <% end %>
      </div>

      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@book.errors.count, "error") %>
          prohibited this obj from being saved:
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <label for="book_title">Title</label><br/>
      <%= f.text_field :title %><br/>

      <label for="book_body">Opinion</label><br/>
      <%= f.text_area :body %><br/>

      <button type="submit" class="btn btn-primary w-100">
      Create Book
      </button>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <body>
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
              <th scope="col"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user == current_user %>
                  <%= link_to book_path(book.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,  fallback: "no_image.jpg" %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,  fallback: "no_image.jpg" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </body>
    </div>
  </div>
</div>