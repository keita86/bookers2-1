<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User info</h2>
        <image class="prf"><%= attachment_image_tag current_user, :profile_image, :fill, 50, 50,  fallback: "no_image.jpg" %></image>
        <table>
          <tbody>
            <tr>
              <td>name</td>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <td>introduction</td>
              <td><%= current_user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(current_user.id) do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@book.errors.count, "error") %>
          prohibited this obj from being saved:
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <label for="book_title">Title</label>
      <%= f.text_field :title %>

      <label for="book_body">Opinion</label>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <body>
        <h1>Books</h1>
        <table>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50,  fallback: "no_image.jpg" %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </body>
    </div>
  </div>
</div>