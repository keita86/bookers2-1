<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="mb-4">
        <%= render 'users/info', user: @book.user %>
      </div>
      <%= render 'books/form', book: @post %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td scope="col">
              <%= link_to @book.user do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
              <%= @book.user.name %>
              <% end %>
              </td>
            <td scope="col"><%= @book.title %></td>
            <td scope="col"><%= @book.body %></td>
            <td scope="col">
            <% if @book.user.id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book) %>
              <%= link_to "Destroy", book_path(@book), method: :delete, "data-cofirm" => "Are you sure?" %>
            <% else %>
              <td>
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorite_path(@book,@book), method: :delete do %>
                    ‚ù§Ô∏è<%= @book.favorites.count %>„ÅÑ„ÅÑ„Å≠
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(@book), method: :post do %>
                    üíô<%= @book.favorites.count %>„ÅÑ„ÅÑ„Å≠
                  <% end %>
                </p>
                <% end %>
              </td>
              <td>
                <p>„Ç≥„É°„É≥„Éà‰ª∂Êï∞Ôºö<%= @book.book_comment.count %></p>
              </td>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="table">
        <h3>Comments</h3>
        <table>
          <tbody>
            <% @book.book_comment.each do |book_comment| %>
            <tr>
              <td scope="col">
                <%= link_to book_comment.user do %>
                <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <%= book_comment.user.name %>
                <% end %>
              </td>
              <td scope="col"><%= book_comment.comment %></td>
              <td scope="col">
                <% if book_comment.user == current_user %>
                  <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                <% end %>
              </td>
            </tr >
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="">
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <% if @book_comment.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@book_comment.errors.count, "error") %>
            prohibited this comment from being saved:
          </h2>
          <ul>
            <% @book_comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
          <%= f.text_area :comment %>
          <%= f.submit "ÈÄÅ‰ø°" %>
        <% end %>
      </div>
    </div>
  </div>
</div>