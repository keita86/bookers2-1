<div>
  <h2>User info</h2>
  <image class="prf"><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></image>
  <table>
    <tbody>
      <tr>
        <td>name</td>
        <td><%= @book.user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @book.user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <% if @user == current_user.id %>
  <%= link_to edit_user_path(@book) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% else %>
  <%= link_to user_path(current_user.id) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% end %>
</div>

<h1>New Book</h1>
<%= form_with model:@post, local:true do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@post.errors.count, "error") %>
    prohibited this obj from being saved:
  </h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<label for="book_title">Title</label>
<%= f.text_field :title %>

<label for="book_body">Opinion</label>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>

<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
      <% if @book.user.id == current_user.id %>
        <%= link_to "Edit", edit_book_path(@book) %>
        <%= link_to "Destroy", book_path(@book), method: :delete, "date-confirm" => "Are you sure?" %>
      <% end %>
      </td>
    </tr>
  </tbody>
</table>