<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-5 px-5 px-sm-0 mx-auto">
      <body>
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
      <% if @book.errors.any? %>
        <div id="error_explanation">
        <h2>
          <%= pluralize(@book.errors.count, "errors") %>
          prohibited this obj from being saved:
        </h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <label for="book_title">Title</label><br/>
      <%= f.text_field :title %><br/>

      <label for="book_body">Opinion</label><br/>
      <%= f.text_area :body %><br/>

      <%= f.submit 'Update Book' %>
      <% end %>

      <%= link_to "Show", book_path(@book.id) %>
      ï½œ
      <%= link_to "Back", "/books" %>

      </body>
    </div>
  </div>
</div>