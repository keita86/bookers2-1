<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <label for="inputName">Name</label><br/>
      <%= f.text_field :name %><br/>

      <label for="inputImage">Image</label><br/>
      <%= f.attachment_field :profile_image %><br/>

      <label for="inputIntroduction">introduction</label><br/>
      <%= f.text_area :introduction %><br/>

      <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>