<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="mb-4">
        <h2>User info</h2>
          <image class="prf"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></image>
          <table class="table">
            <tbody>
              <tr class="my-2">
              <td>name</td>
              <td><%= @user.name %></td>
            </tr>
            <tr class="my-2">
              <td>introduction</td>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user.id) do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
        <% else %>
          <%= link_to user_path(current_user) do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>

      <div>
        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@book.errors.count, "error") %>
            prohibited this obj from being saved:
          </h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <label for="book_title">Title</label><br/>
        <%= f.text_field :title %><br/>

        <label for="book_body">Opinion</label><br/>
        <%= f.text_area :body %><br/>

        <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>

    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,  fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>