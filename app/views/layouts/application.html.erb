<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/cd73e3974b.js" crossorigin="anonymous"></script>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container bg-secondary py-3">
        <div class="row">
          <div class="col text-white">
            <%= link_to "Bookers", root_path %>
            <% if user_signed_in? %>
          </div>

            <div class="text-white mr-2">
             <%= link_to user_path(current_user.id) do %>
             <i class="fas fa-home"></i>Home
             <% end %>
            </div>
            <div class="text-white mr-2">
              <%= link_to users_path do %>
              <i class="fas fa-users"></i>Users
              <% end %>
            </div>
            <li>
              <%= link_to books_path do %>
              <i class="fas fa-book-open"></i>Books
              <% end %>
            </li>
            <li>
              <%= link_to  destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>logout
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path do %>
              <i class="fas fa-home"></i>Home
              <% end %>
            </li>
            <li>
              <%= link_to  home_about_path do %>
              <i class="fas fa-link"></i>About
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <i class="fas fa-user-plus"></i>sign up
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt"></i>login
              <% end %>
            </li>

          <% end %>
          </nav>
        </div>
      </div>
    </header>
    <% if flash[:notice] %>
    <div class="flash">
    <%= flash[:notice] %>
    </div>
    <% end %>

    <%= yield %>
    <footer>
      <div class="container mt-5 bg-secondary w-100">
        <div class="row">
          <div class="mx-auto pt-3 ">
            <p class="text-white">CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>