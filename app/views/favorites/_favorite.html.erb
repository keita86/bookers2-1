<div class="favorite-link" id="favorite-link-<%= book.id %>">
<% if book.favorited_by?(current_user) %>
  <%= link_to book.favorites.count, book_favorites_path(book), method: :delete, remote: true, class: "fas fa-heart text-danger" %>
<% else %>
  <%= link_to book.favorites.count, book_favorites_path(book), method: :post, remote: true, class: "far fa-heart text-primary" %>
<% end %>
</div>